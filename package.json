{
  "name": "micro-charts",
  "version": "0.5.0",
  "description": "A tiny library for visualizing your data",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "scripts": {
    "size": "size-limit",
    "start": "parcel docs/index.html --open",
    "docs": "rm -rf dist && parcel build docs/index.html --no-source-maps --public-url /micro-charts/",
    "build": "tsc",
    "predeploy": "npm run docs",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SanichKotikov/micro-charts.git"
  },
  "author": "Sanich Kotikov <sancho@cdrpro.ru> (https://sanichkotikov.github.io)",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "keywords": [
    "charts",
    "piechart",
    "chart",
    "pie",
    "graph"
  ],
  "bugs": {
    "url": "https://github.com/SanichKotikov/micro-charts/issues"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "2.2.2",
    "gh-pages": "2.1.1",
    "parcel-bundler": "1.12.4",
    "typescript": "3.7.2"
  },
  "size-limit": [
    {
      "path": "lib/linechart/index.js"
    },
    {
      "path": "lib/piechart/index.js"
    }
  ],
  "homepage": "https://github.com/SanichKotikov/micro-charts"
}
